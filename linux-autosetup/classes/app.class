# Class named "app" for bash object

# fields
declare -Ag app_fields
declare -A app_backupFileDirs=()

# Handles getting/setting fields.
app.field() {
	if [ "$2" == "=" ]
	then
		app_fields[$1]=$3
	else
		echo ${app_fields[$1]}
	fi
}

# app class constructor
# Params: $1 = 
app.constructor() {
	app.field name = app
	
	echo "app constructed"
}

app.name() {
	app.field name $1 $2
}

app.installCommand() {
	app.field installCommand $1 $2
}

app.backupFileDirs() {
	app.field backupFileDirs $1 $2
}


