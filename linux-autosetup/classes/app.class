# Class named "app" for bash object

# fields
declare -Ag app_fields

# Handles getting/setting fields.
app.field() {
	if [ "$2" == "=" ]
	then
		app_fields[$1]=$3
	else
		echo ${app_fields[$1]}
	fi
}

# app class constructor
# Params: $1 = installCommand $2 = backupSources
app.constructor() {
	app.field name = "$(convertToHyphen "app")"
	
	# Command that is used to install app
	if [[ $(isEmptyString $1) ]]; then
		app.field installCommand = "${defaultInstallCommand//'"name"'/$(app.field name)}"
	else
		app.field installCommand = "$1"
	fi

	# Directories to files that user wants to back up.
	# Structured as the following:
	# 'dir/to/file/sourcefile... dir/to/other/file/sourcefile'
	app.field backupSources = ''
	
	echo "$(app.field name): constructed."
}

# Getter/setter methods
app.name() {
	app.field name $1 $2
}

app.installCommand() {
	app.field installCommand $1 $2
}

app.backupSources() {
	app.field backupSources $1 $2
}

# Install app on call
# Also reset to original dir in case command used cd
app.install() {
	echo "$(app.field name): Installing..."
	$(app.field installCommand)
	cd $SCRIPT_WORKING_DIR
}

# Back up sources
app.backup() {
	echo
}

